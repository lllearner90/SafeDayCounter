FROM ubuntu:latest

LABEL MAINTAINER="Amardeep Shetty"
ARG DEBIAN_FRONTEND=noninteractive
ARG BUILD_DIR
ARG TIMEZONE

ENV TZ=TIMEZONE

# Install QEMU
RUN apt-get update && \
    apt-get install -y \
    qemu-system-arm

RUN qemu-system-arm --version

EXPOSE 1234

RUN mkdir -p ${BUILD_DIR}
WORKDIR ${BUILD_DIR}